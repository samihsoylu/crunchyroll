{
    "name": "samihsoylu/crunchyroll",
    "description": "Crunchroll RSS Feed episode release tracking",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Samihsoylu\\Crunchyroll\\": "src/",
            "Samihsoylu\\Crunchyroll\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Samih Soylu",
            "email": "mail@samihsoylu.nl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
      "php": "^8.1",
      "ext-simplexml": "*",
        "brd6/notion-sdk-php": "^1.1",
        "symfony/http-client": "^6.3",
        "nyholm/psr7": "^1.8",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "sentry/sdk": "^3.5"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.16"
    }
}
